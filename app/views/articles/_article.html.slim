h2 = link_to article.name, article_path(article)
.text
  => article.text
  br
  ' Published by
  = article.user.full_name
  = " at #{article.created_at.to_s(:short)}"
  .assessment (data-behavior="assessment", data-article-id=article.id)
  br
- if policy(article).manage?
  .links
    => link_to "Edit", edit_article_path(article)
    = link_to "Delete", article_path(article), method: :delete
    br
